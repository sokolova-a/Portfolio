@startuml
!define avoidmixing

left to right direction
actor user
actor admin


rectangle "Яндекс Метро" {
actor :Пользователь: as user
actor :Администратор: as admin
user -- (Планировать маршрут)
user -- (Посмотреть карту станций метро)
user -- (Считать данные с билетов через NFC)
user -- (Получить информацию о задержках)
user -- (Посмотреть описание выходов со станции)

(Планировать маршрут) ..> (Выбрать станцию) : include
(Планировать маршрут) ...> (Поcмотреть детали маршрута) : include

(Выбрать станцию) ..> (Выбрать станцию отправления) : include
(Выбрать станцию) ..> (Выбрать станцию прибытия) : include
(Выбрать станцию) <.. (Выбрать станцию касанием) : extend
(Выбрать станцию) <.. (Добавить станцию в избранное) : extend

(Поcмотреть детали маршрута) ..> (Получить информацию о времени прибытия) : include
(Поcмотреть детали маршрута) ..> (Получить информацию о длительности поездки) : include
(Поcмотреть детали маршрута) ..> (Получить информацию о пересадках) : include

(Посмотреть описание выходов со станции) <.. (Открыть в Яндекс Картах) : extend


admin -- (Добавить новую станцию)
admin -- (Удалить станцию)
admin -- (Изменить информацию о станции)
admin -- (Управлять расписанием поездов)
admin -- (Получить отчеты и статистики)

}
@enduml
